{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules"],
  "types": ["jest", "node"]
}