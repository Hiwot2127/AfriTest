{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "/*": ["*"]  
    }
  },
  "include": ["src/**/*", "bin/**/*", "test/**/*"],  "exclude": ["node_modules"],
  "types": ["jest", "node"]
}